<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Product" Content="Product" Margin="330,89,330,291" RenderTransformOrigin="0.5,0.5" FontSize="24" FontFamily="Arial Rounded MT Bold" Click="Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.694"/>
                    <RotateTransform/>
                    <TranslateTransform X="2.388"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="close" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Height="25" Width="30" Background="#FFDDDDDD" Click="Button_Click_1"/>


    </Grid>
</Window>
