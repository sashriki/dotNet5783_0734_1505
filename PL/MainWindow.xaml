                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>-->
        <Button x:Name="button" Content="Tracking" HorizontalAlignment="Left" Height="60" Margin="10,377,0,0" VerticalAlignment="Top" Width="109" Background="{Binding AreAnyTouchesDirectlyOver, ElementName=button, Mode=OneWay}" FontSize="20" FontFamily="Comic Sans MS" Click="Button_Click" RenderTransformOrigin="1.096,2.795" >
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFA21717" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Image Source="/טטט.jpeg" Margin="422,24,-42,98"/>
        <Button x:Name="Manager"  Content="Manager" RenderTransformOrigin="3.768,1.218" HorizontalAlignment="Left" Height="59" Margin="10,313,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="20" Click="manager_Click" Background="{Binding ElementName=button, Mode=OneWay}" Width="109">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFA21717" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>

        <Button x:Name="Client"  Content="Client" FontFamily="Comic Sans MS" FontSize="20" Click="client_Click" HorizontalAlignment="Left" Height="58" Margin="10,250,0,0" VerticalAlignment="Top" Width="109" Background="{Binding ElementName=button, Mode=OneWay}">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFC11010" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Button Content="Simulator" HorizontalAlignment="Left" Height="60" Margin="10,183,0,0" VerticalAlignment="Top" Width="109" Background="{Binding AreAnyTouchesDirectlyOver, ElementName=button, Mode=OneWay}" FontSize="20" FontFamily="Comic Sans MS" Click="Simulator" RenderTransformOrigin="1.096,2.795" >
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFA21717" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
