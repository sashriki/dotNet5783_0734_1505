<Window x:Class="PLL.ProductWin.MainProductWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLL.ProductWin"
        mc:Ignorable="d"
        Title="MainProductWin" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="181*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid x:Name="innerGrid" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="Category" Content="Category:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="16" FontFamily="Candara" Width="256"/>
            <ComboBox x:Name="selectedCategory" Grid.Column="1" SelectionChanged="selectedCategory_SelectionChanged" >
            <!--<ComboBoxItem Content="All"/>
                <ComboBoxItem Content="Clothing" />
                <ComboBoxItem Content="Shoes" />
                <ComboBoxItem Content="Home Workout" />
                <ComboBoxItem Content="Gym Equipment" />
                <ComboBoxItem Content="Accessories" />-->
            </ComboBox>

        </Grid>

        <ListView x:Name="ProductListview" MouseDoubleClick="ProductListview_MouseDoubleClick" Margin="0,33,0,0" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="listOfProducts" Header="Id" DisplayMemberBinding="{Binding ProductId}"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding ProductName}"/>
                    <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}"/>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="Add" Content="Add new Product" Grid.Row="2" HorizontalAlignment="Left" Margin="677,5,0,5" Padding="5" Click="Add_Click" Width="104"/>
        <Button Content="Return" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center" Click="Button_Click" Width="48"/>


    </Grid>

</Window>
